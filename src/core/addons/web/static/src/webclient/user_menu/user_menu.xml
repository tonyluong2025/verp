<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.UserMenu" owl="1">
        <Dropdown class="o-user-menu" t-on-dropdown-item-selected.stop="onDropdownItemSelected">
            <t t-set-slot="toggler">
                <img class="rounded-circle o-user-avatar" t-att-src="source" alt="User"/> <span class="oe-topbar-name"><t t-esc="user.label"/><t t-if="env.debug" t-esc="' (' + user.db.name + ')'"/></span>
            </t>
            <t t-foreach="getElements()" t-as="element" t-key="element_index">
                <t t-if="!element.hide">
                    <UserMenuItem
                        t-if="element.type == 'item'"
                        payload="{ callback: element.callback, id: element.id }"
                        href="element.href"
                        t-esc="element.description"
                    />
                    <div t-if="element.type == 'separator'" role="separator" class="dropdown-divider"/>
                </t>
            </t>
        </Dropdown>
    </t>

</templates>
