<?xml version="1.0" encoding="utf-8"?>
<verp>

<template id="sMegaMenuMenuImageMenu" name="Menu - Image - Menu" groups="base.groupUser">
    <section class="s-mega-menu-menu-image-menu py-4 o-colored-level o-cc o-cc1">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-sm py-2 text-center">
                    <h4 class="o-default-snippet-text" >Left Menu</h4>
                    <nav class="nav flex-column">
                        <t t-foreach="3" t-as="i">
                            <t t-set="text">Menu Item %s</t>
                            <t t-set="text" t-value="text % (i + 1)"/>
                            <a href="#" class="nav-link o-default-snippet-text" data-name="Menu Item"
                                t-esc="text"/>
                        </t>
                    </nav>
                </div>
                <div class="col-12 col-sm py-2 text-center">
                    <img class="img-fluid" src="/web/image/website.sMegaMenuMenuImageMenuDefaultImage"/>
                </div>
                <div class="col-12 col-sm py-2 text-center">
                    <h4 class="o-default-snippet-text">Right Menu</h4>
                    <nav class="nav flex-column">
                        <t t-foreach="3" t-as="i">
                            <t t-set="text">Menu Item %s</t>
                            <t t-set="text" t-value="text % (i + 1)"/>
                            <a href="#" class="nav-link o-default-snippet-text" data-name="Menu Item"
                                t-esc="text"/>
                        </t>
                    </nav>
                </div>
            </div>
        </div>
    </section>
</template>

</verp>
