<?xml version="1.0" encoding="utf-8"?>
<verp>
    <record id="digestDigestViewForm" model="ir.ui.view">
        <field name="label">digest.digest.view.form.inherit.sale.order</field>
        <field name="model">digest.digest</field>
        <field name="inheritId" ref="digest.digestDigestViewForm" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='kpiSales']" position="attributes">
                <attribute name="string">Sales</attribute>
                <attribute name="groups">sales_team.groupSaleSalesmanAllLeads</attribute>
            </xpath>
            <xpath expr="//group[@name='kpiSales']" position="inside">
                <field name="kpiAllSaleTotal"/>
            </xpath>
        </field>
    </record>
</verp>
