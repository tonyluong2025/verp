            <t t-set="additionalTitle">Security</t>
            <t t-set="noBreadcrumbs" t-value="1"/>
            <div class="alert alert-danger" role="alert" t-if="getError(errors)">
                <t t-esc="errors"/>
            </div>
            <section>
